<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_teacher_form" model="ir.ui.view">
		<field name="name">view.teacher.form</field>
		<field name="model">teacher</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="name" placeholder="Name"></field>
						</group>
						<group>
							<field name="teacher_number" placeholder="ID number" widget="integer" options="{'format': 0}"></field>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
</odoo>
